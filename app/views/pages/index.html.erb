<h1>Listing pages</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Body</th>
    <th>Updated on</th>
    <th>Parent</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.name %></td>
    <td><%= page.title %></td>
    <td><%= page.body %></td>
    <td><%= page.updated_on %></td>
    <td><%= page.parent_id %></td>
    <td>
    	<%= page.position %>
    	<%= link_to 'Up', higher_page_path(page), :method => :put %>
    	<%= link_to 'Down', lower_page_path(page), :method => :put %>
    </td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

